{
  "name": "passports-ticket-status",
  "version": "1.0.0",
  "description": "Ticket status monitor to join up gitlab, jenkins, and jira statuses into a single visualisation",
  "main": "app.js",
  "scripts": {
    "build": "npm run build:clean && npm run build:assets && npm run build:config && npm run build:js:prd",
    "build:clean": "rm -rf ./dist/*",
    "build:assets": "cp assets/* dist/",
    "build:config": "node -e \"process.stdout.write(JSON.stringify(require('config').get('config'), null, 2));\" > ./config/index.json",
    "build:js:prd": "browserify js/index.js -t [ babelify ] -g [ envify --NODE_ENV production ] -g uglifyify | uglifyjs --compress --mangle > ./dist/app.js",
    "build:js:dev": "browserify js/index.js -t [ babelify ] -g [ envify --NODE_ENV production ] > ./dist/app.js",
    "postinstall": "npm run build",
    "test:lint": "eslint --ext .js --ext .jsx .",
    "test": "npm run test:lint"
  },
  "author": "HMPO",
  "license": "MIT",
  "dependencies": {
    "config": "^1.26.1",
    "express": "^4.15.2",
    "js-yaml": "^3.8.3"
  },
  "devDependencies": {
    "async": "^2.3.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^16.1.0",
    "envify": "^4.1.0",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^7.0.1",
    "hmpo-logger": "^3.0.0",
    "lodash": "^4.17.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "uglify-js": "^3.3.10",
    "uglifyify": "^4.0.5"
  }
}
